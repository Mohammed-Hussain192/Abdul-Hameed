<!-- Navbar Partial -->
<style>
.nav {
    height: 2vw;
    width: 5vw;
    
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 3vw;
    color: rgb(0, 0, 0);
    position: absolute;
    left: 90%;
    top: 5%;
    border-radius: 10px;
    
    cursor: pointer;
    z-index: 3;
}

.main-nav {
    height: 100%;
    width: 100%;
    background-color: rgb(255, 255, 255);
    position: absolute;
    top: 50%;
    left: 50%;
    
    transform: translate(-50%, -50%) scale(0); /* Start scaled down */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 99;
    border-radius: 50%; /* Start rounded */
    overflow: hidden;
}

.exit {
    height: 3vw;
    width: 3vw;
    background-color: rgb(0, 0, 0);
    
    position: absolute;
    right: 2%;
    top: 2%;
    cursor: pointer;
    z-index: 101;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: bold;
    color: white;
    transition: all 0.3s ease;
}
.exit:hover {
    border-radius: 50%;
}

.menu {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2.5vw;
}

.menu-item {
    font-size: 4vw;
    font-weight: 100;
    display: none;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    cursor: pointer;
    
    color: rgb(0, 0, 0);
}
#home:hover, #about:hover, #mywork:hover, #certificate:hover, #contact:hover {
    text-decoration: underline;
    transform: scale(1.1);
    transition: all 0.3s ease;

}
@media (max-width: 768px) {

    .nav {
        height: 40px;
        width: 70px;
        font-size: 5vw;
        left: auto;
        right: 5%;
        top: 3%;
        border-radius: 8px;
    }

    .main-nav {
        height: 100%;
        width: 100%;
        border-radius: 0; /* full screen menu on mobile */
    }

    .exit {
        height: 40px;
        width: 40px;
        font-size: 18px;
        right: 5%;
        top: 3%;
    }

    .menu {
        gap: 24px;
    }

    .menu-item {
        font-size: 36px;
        font-weight: 600;
        display: none;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;

    }
}

/* ================= VERY SMALL DEVICES ================= */

@media (max-width: 480px) {

    .nav {
        width: 60px;
        height: 36px;
        font-size: 10vw;
    }

    .exit {
        width: 36px;
        height: 36px;
        font-size: 16px;
    }

    .menu-item {
        font-size: 30px;
    }
}
</style>


<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.13.0/gsap.min.js"></script>
<script>
let nav = document.querySelector('.nav');
let main = document.querySelector('.main-nav');
let exit = document.querySelector('.exit');
let items = document.querySelectorAll('.menu-item');

let isOpen = false;

nav.addEventListener('click', () => {
    if (!isOpen) {
        main.style.display = 'flex';
        nav.style.display = 'none';

        // START off-screen LEFT
        gsap.set(main, {
            x: "-90%",
            scale: 1,
            borderRadius: "50%"
        });

        // MOVE INTO VIEW
        gsap.to(main, {
            x: "0%",
            borderRadius: 0,
            duration: 0.8,
            ease: "power3.out",
            onComplete: () => {
                gsap.fromTo(items,
                    { x: -100, display: 'none', opacity: 0 },
                    {
                        x: 0,
                        display: 'block',
                        opacity: 1,
                        duration: 0.3,
                        stagger: 0.2
                    }
                );
            }
        });

        isOpen = true;
    }
});

exit.addEventListener('click', closeMenu);

function closeMenu() {

    // hide items first
    gsap.to(items, {
        x: -100,
        opacity: 0,
        duration: 0.2,
        stagger: 0.1
    });

    // MOVE OUT TO RIGHT
    gsap.to(main, {
        x: "100%",
        
        duration: 0.6,
        ease: "power3.in",
        onComplete: () => {
            main.style.display = "none";
            nav.style.display = "flex";
            gsap.set(main, { x: "-100%" }); // reset for next open
        }
    });

    isOpen = false;
}

let  aboutnav = document.getElementById('about');
aboutnav.addEventListener('click', () => {
    window.location.href = '/about';    
});
let homenav = document.getElementById('home');
homenav.addEventListener('click', () => {
    window.location.href = '/';    
});
let worknav = document.getElementById('mywork');

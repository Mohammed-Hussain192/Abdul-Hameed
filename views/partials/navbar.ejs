<div class="main-nav">
    <div class="exit">X</div>
    <div class="menu">
        <div class="menu-item" id="home">HOME</div>
        <div class="menu-item" id="about" >ABOUT ME</div>
        <div class="menu-item" id="mywork">MY WORK</div>
        <div class="menu-item" id="certificate">CERTIFICATIONS</div>
